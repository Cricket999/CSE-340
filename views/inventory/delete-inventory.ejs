<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div id="formholder">
  <form id="deleteForm" action="/inv/delete" method="post">
    <label for="inv_make">Make</label><br>
    <input id="inv_make" name="inv_make" type="text" required value="<%= locals.inv_make %>" readonly><br>
    <label for="inv_model">Model</label><br>
    <input id="inv_model" name="inv_model" type="text" required value="<%= locals.inv_model %>" readonly><br>
    <label for="inv_year">4-Digit Year</label><br>
    <input id="inv_year" name="inv_year" type="text" required value="<%= locals.inv_year %>" readonly><br>
    <label for="inv_price">Price</label><br>
    <input id="inv_price" name="inv_price" type="text" required value="<%= locals.inv_price %>" readonly><br>
    <input id="submit" type="submit" value="Delete Item - This is permanent."><br>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>
</div>